# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /horse                                  Horses.blank
GET     /horses                                 Horses.list

GET		/races									Races.list
GET		/races/new								Races.newRace
POST	/races/new								Races.create
GET		/races/{<[0-9]+>id}						Races.detail
GET		/races/enter							Races.enter

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Tmp: for dev purposes only!
GET 	/secret									SecuredController.someSecretPage

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Authentication
*       /auth       module:securesocial
